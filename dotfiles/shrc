# Define path for sh config file
SHDOTDIR="$HOME/.config/sh"

# Remove background colors from folders in ls
source "$SHDOTDIR/dir_colors"

{%@@ if profile == "uz" @@%}
# Uz profile
export DOTDROP_PROFILE="uz"
{%@@ endif @@%}

# Aliases
source "$SHDOTDIR/aliases"

{%@@ if profile == "marvin" @@%}
# Add snap to path
PATH=$PATH:/snap/bin
{%@@ endif @@%}